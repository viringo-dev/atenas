<%= form_with model: user, url: path, method: method, class: "p-4 border border-gray-300 rounded-lg" do |form| %>
  <div class="mb-2 text-lg font-semibold">
    <% if user.new_record? %>
      <%= t("pages.account.form.sign_up.noun") %>
    <% else %>
      <%= t("pages.account.form.update.noun") %>
    <% end %>
  </div>
  <%= render partial: "shared/form_errors", locals: { object: form.object } %>
  <div class="mb-2 flex justify-center" data-controller="previews">
    <%= form.label :avatar do %>
      <%= image_tag form.object.avatar.attached? ? form.object.avatar : "/default-avatar.png",
                    data: { previews_target: "preview" },
                    class: "w-20 h-20 rounded cursor-pointer shadow-sm border-2 border-gray-300 shadow-gray-300" %>
    <% end %>
    <%= form.file_field :avatar,
                        data: { previews_target: "input", action: "change->previews#preview" },
                        accept: 'image/png,image/jpeg,image/jpg',
                        class: "hidden" %>
  </div>
  <div class="mb-2">
    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, required: true, class: "input", placeholder: "Elon" %>
  </div>
  <div class="mb-2">
    <%= form.label :surname, class: "label" %>
    <%= form.text_field :surname, required: true, class: "input", placeholder: "Musk" %>
  </div>
  <div class="mb-2">
    <%= form.label :email, class: "label" %>
    <%= form.email_field :email, disabled: user.persisted?, class: "input", placeholder: "elon@example.com" %>
  </div>
  <div class="mb-2 flex gap-x-2">
    <div class="w-1/2">
      <%= form.label :username, class: "label" %>
      <%= form.text_field :username, required: true, class: "input", minlength: User::USERNAME_MIN_LENGTH, maxlength: User::USERNAME_MAX_LENGTH, placeholder: "elonmusk" %>
    </div>
    <div class="w-1/2">
      <%= form.label :phone, class: "label" %>
      <%= form.telephone_field :phone, required: true, class: "input", placeholder: "+51 987654321" %>
    </div>
  </div>
  <div class="mb-2 flex gap-x-2">
    <div class="w-1/2">
      <%= form.label :gender, class: "label" %>
      <%= form.select :gender, User.genders.keys.map { |k| [t("activerecord.models.user.enums.gender.#{k}"), k] }, {}, { class: "select" } %>
    </div>
    <div class="w-1/2">
      <%= form.label :birthdate, class: "label" %>
      <%= form.text_field :birthdate,
                          required: true,
                          class: "input",
                          data: { controller: "flatpickr",
                                  "flatpickr-params-value": {
                                    dateFormat: "d-m-Y",
                                    defaultDate: form.object.birthdate.present? ? form.object.birthdate.strftime("%d-%m-%Y") : Date.today.strftime("%d-%m-%Y"),
                                    maxDate: Date.today.strftime("%d-%m-%Y"),
                                    minDate: (Date.today - 100.years).strftime("%d-%m-%Y")
                                  }
                                } %>
    </div>
  </div>
  <div class="mb-2">
    <%= form.label :password, class: "label" %>
    <%= form.password_field :password, required: user.new_record?, class: "input", placeholder: "" %>
  </div>
  <div class="mb-2">
    <%= form.label :password_confirmation, class: "label" %>
    <%= form.password_field :password_confirmation, required: user.new_record?, class: "input", placeholder: "" %>
  </div>
  <% if user.persisted? %>
    <div class="mb-2">
      <%= form.label :current_password, t("pages.account.form.current_password"), class: "label" %>
      <%= form.password_field :current_password, required: true, class: "input", placeholder: "" %>
    </div>
  <% end %>
  <% if user.new_record? %>
    <div class="flex items-start mb-2">
      <div class="flex items-center h-5">
        <input id="remember" type="checkbox" value="" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300" required>
      </div>
      <label for="remember" class="ml-2 text-sm font-medium text-gray-900"><%= t("pages.account.form.accept") %><%= link_to t("pages.account.form.terms_and_conditions"), sign_up_path, class: "text-primary" %></label>
    </div>
  <% end %>
  <%= form.button class: "btn bg-primary hover:bg-primary-light", style: "cursor: pointer;" do %>
    <span class="show-when-enabled"><%= user.new_record? ? t("pages.account.form.sign_up.verb") : t("pages.account.form.update.verb") %></span>
    <span class="show-when-disabled">
      <div class="text-center">
        <div role="status">
          <svg aria-hidden="true" class="inline w-6 h-6 mr-2 text-white animate-spin fill-primary" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
            <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
          </svg>
        </div>
      </div>
    </span>
  <% end %>
  <% if user.new_record? %>
    <div class="text-sm text-center mt-4">
      <%= t("pages.account.form.already_have_account") %><%= link_to t("pages.account.form.sign_in.verb"), login_path, class: "text-primary font-semibold" %>
    </div>
  <% end %>
<% end %>
