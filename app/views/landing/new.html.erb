<% if current_user %>
  <p>Has iniciado sesión como <%= current_user.email %></p>
  <p><%= link_to "i18n Cerrar sesión", logout_path, data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro?" }, class: "text-blue-700" %></p>
  <% else %>
  <p><%= link_to "i18n Iniciar sesión", login_path, class: "text-blue-700" %></p>
  <p><%= link_to "i18n Registrarse", sign_up_path, class: "text-blue-700" %></p>
<% end %>
