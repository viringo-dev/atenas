<div class="flex flex-col">
  <div class="flex justify-end mb-2">
    <div class="">
      <%= link_to t("pages.tasks.create_task"),
                  new_task_path,
                  class: button_classes("block bg-third rounded-lg hover:bg-third-hover"),
                  data: { turbo_frame: dom_id(Task.new) } %>
    </div>
  </div>

  <%= turbo_frame_tag Task.new %>
  
  <%= turbo_frame_tag "tasks" do %>
    <%= render @tasks %>
  <% end %>

  
  <%= render "shared/pager", resource: @tasks %>
</div>
