<%= turbo_stream.append "tasks" do %>
  <%= render(TaskComponent.with_collection(@tasks, current_user: current_user)) %>
<% end %>
<% if @pagy.next.present? %>
  <%= turbo_stream.replace "tasks-pagination" do %>
    <%= turbo_frame_tag "tasks-pagination", src: root_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "tasks-loader" %>
<% end %>
