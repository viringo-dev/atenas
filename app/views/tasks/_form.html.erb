<%= form_for @task do |form| %>
  <%= render partial: "shared/form_errors", locals: { object: form.object } %>
  <div class="mb-2">
    <%= form.label :name, class: label_classes %>
    <%= form.text_field :name, required: true, class: input_classes, placeholder: "Factorización" %>
  </div>
  <div class="mb-2">
    <%= form.label :description, class: label_classes %>
    <%= form.text_area :description, required: true, class: input_classes %>
  </div>
  <div class="mb-4 flex gap-x-2">
    <div class="w-1/2">
      <%= form.label :reward, class: label_classes %>
      <div class="flex">
        <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-r-0 border-gray-300 rounded-l-md">
          S/. 
        </span>
        <%= form.text_field :reward, required: true, class: input_classes("flex-1 min-w-0 rounded-l-none"), placeholder: "10" %>
      </div>
    </div>
    <div class="w-1/2">
      <%= form.label :deadline, class: label_classes %>
      <%= form.datetime_local_field :deadline, required: true, class: date_classes %>
    </div>
  </div>
  <div class="mb-2">
    <div class="flex items-center gap-x-1">
      <%= form.label :files, class: label_classes %>
      <p class="text-sm text-gray-500 mb-1">(5 máx.)</p>
    </div>
    <% @task.files.each do |file| %>
      <%= form.hidden_field :files, multiple: true, value: file.signed_id %>
    <% end %>
    <%= form.file_field :files,
                        multiple: true,
                        data: { controller: "files", files_target: "input", action: "change->files#checkFiles" },
                        class: input_classes %>
  </div>
  <div class="flex justify-center">
    <%= form.button class: button_classes("mb-1 w-full"), style: "cursor: pointer;" do %>
      <span class="show-when-enabled"><%= t("pages.common.save") %></span>
      <span class="show-when-disabled">
        <div class="text-center">
          <div role="status">
            <svg aria-hidden="true" class="inline w-6 h-6 mr-2 text-white animate-spin fill-primary" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
              <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
            </svg>
          </div>
        </div>
      </span>
    <% end %>
  </div>
  <div class="flex justify-center">
    <div class="w-full">
      <%= link_to t("pages.common.cancel"), tasks_path, class: button_classes("block bg-negative hover:bg-negative-hover") %>
    </div>
  </div>
<% end %>
