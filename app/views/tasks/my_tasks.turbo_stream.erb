<%= turbo_stream.append "my_tasks" do %>
  <%= render partial: "task", :collection => @tasks, as: :task %>
<% end %>
<% if @pagy.next.present? %>
  <%= turbo_stream.replace "tasks-pagination" do %>
    <%= turbo_frame_tag "tasks-pagination", src: my_tasks_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "tasks-loader" %>
<% end %>
