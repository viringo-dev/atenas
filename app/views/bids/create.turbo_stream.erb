<%# Step 1: Empty the Turbo Frame containing the form %>
<%= turbo_stream.update nested_dom_id(@task, Bid.new), "" %>

<%# Step 2: Append the created bid to the list %>
<%= turbo_stream.append nested_dom_id(@task, "bids") do %>
  <%= render @bid, task: @task %>
<% end %>

<%= render_turbo_stream_flash_messages %>