<% if flash.any? %>
  <ul class="fixed left-1/2 -translate-x-1/2 top-10 mx-4 flex flex-col items-center gap-2">
    <% flash.each do |type, message| %>
      <li data-controller="flash">
        <% if type == "notice" %>
          <div class="flex items-center p-4 text-sm text-green-800 rounded-lg bg-green-50 border border-green-800" role="alert">
        <% else %>
          <div class="flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 border border-red-800" role="alert">
        <% end %>
        <svg class="flex-shrink-0 inline w-4 h-4 mr-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
        </svg>
        <div>
          <%= message %>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
<% end %>
