<header>
  <nav class="bg-primary">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
      <a href="/" class="flex items-center">
        <span class="text-white self-center text-2xl font-semibold whitespace-nowrap">ATENAS</span>
      </a>
      <div class="flex items-center md:order-2">
        <% if current_user %>
          <button type="button" class="flex mr-3 text-sm rounded-full md:mr-0 ring-4 ring-gray-300" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown" data-dropdown-placement="bottom">
            <div class="w-10 h-10 rounded-full">
              <svg width="" height="" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12ZM15 9C15 10.6569 13.6569 12 12 12C10.3431 12 9 10.6569 9 9C9 7.34315 10.3431 6 12 6C13.6569 6 15 7.34315 15 9ZM12 20.5C13.784 20.5 15.4397 19.9504 16.8069 19.0112C17.4108 18.5964 17.6688 17.8062 17.3178 17.1632C16.59 15.8303 15.0902 15 11.9999 15C8.90969 15 7.40997 15.8302 6.68214 17.1632C6.33105 17.8062 6.5891 18.5963 7.19296 19.0111C8.56018 19.9503 10.2159 20.5 12 20.5Z" fill="#FFF"/>
              </svg>
            </div>
          </button>
          <!-- Dropdown menu -->
          <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow" id="user-dropdown">
            <ul class="p-4" aria-labelledby="user-menu-button">
              <li>
                <%= link_to current_user.email, account_path, class: "block text-sm text-gray-900 font-semibold truncate" %>
              </li>
            </ul>
            <ul class="" aria-labelledby="user-menu-button">
              <li>
                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Settings</a>
              </li>
              <li>
                <%= link_to t("pages.account.sign_out"), logout_path, data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro?" }, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              </li>
            </ul>
          </div>
        <% else %>
          <div class="flex gap-x-2">
            <%= link_to "Sign in", login_path, class: button_classes("bg-secondary rounded-lg hover:bg-secondary-hover") %>
            <%= link_to "Sign up", sign_up_path, class: button_classes("bg-third rounded-lg hover:bg-third-hover") %>
          </div>
        <% end %>
          <button data-collapse-toggle="navbar-user" type="button" class="ml-2 inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-user" aria-expanded="false">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
            </svg>
          </button>
      </div>
      <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-user">
        <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:flex-row md:space-x-8 md:mt-0 md:border-0">
          <li>
            <a href="#" class="block py-2 pl-3 pr-4 text-white md:p-0 border-primary border-l-2 md:border-l-0 md:border-b-2 hover:border-white" aria-current="page">Home</a>
          </li>
          <li>
            <a href="#" class="block py-2 pl-3 pr-4 text-white md:p-0 border-primary border-l-2 md:border-l-0 md:border-b-2 hover:border-white">About</a>
          </li>
          <li>
            <a href="#" class="block py-2 pl-3 pr-4 text-white md:p-0 border-primary border-l-2 md:border-l-0 md:border-b-2 hover:border-white">Services</a>
          </li>
          <li>
            <a href="#" class="block py-2 pl-3 pr-4 text-white md:p-0 border-primary border-l-2 md:border-l-0 md:border-b-2 hover:border-white">Pricing</a>
          </li>
          <li>
            <a href="#" class="block py-2 pl-3 pr-4 text-white md:p-0 border-primary border-l-2 md:border-l-0 md:border-b-2 hover:border-white">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>